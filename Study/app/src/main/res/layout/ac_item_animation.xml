<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <LinearLayout
        android:id="@+id/vg_reveal"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_reveal"
        >
    </LinearLayout>
    
    <FrameLayout
        android:id="@+id/vg_parent"
        android:layout_width="160dp"
        android:layout_height="120dp">

        <study.heaven7.com.android_study.view.AutoZoomInImageView
            android:id="@+id/aziv"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/levelover_icon_fall"
            />

    </FrameLayout>

    <Button
        android:id="@+id/bt_test_reveal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test low 5.0 reveal"
        />

    <Button
        android:id="@+id/bt_escale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test equal scale"
        />

</LinearLayout>